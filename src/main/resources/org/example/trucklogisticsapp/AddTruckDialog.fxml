<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.trucklogisticsapp.controller.AddTruckDialogController"
      spacing="15"
      prefWidth="550"
      prefHeight="650"
      style="-fx-background-color: #f8f9fa; -fx-padding: 20;">

    <!-- Title -->
    <HBox alignment="CENTER_LEFT"
          style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
        <Label text="âž• Add New Truck"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    </HBox>

    <!-- Error Label -->
    <Label fx:id="lblError"
           wrapText="true"
           visible="false"
           style="-fx-background-color: #fff3cd; -fx-text-fill: #856404; -fx-padding: 10; -fx-background-radius: 5; -fx-border-color: #ffc107; -fx-border-width: 1; -fx-border-radius: 5;"/>

    <!-- Form Content -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                style="-fx-background: transparent; -fx-background-color: transparent;">
        <VBox spacing="15">

            <!-- Basic Information Section -->
            <VBox spacing="10"
                  style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="Basic Information"
                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #495057;"/>
                <Separator/>

                <!-- VIN -->
                <VBox spacing="5">
                    <Label text="VIN *" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtVin"
                               promptText="Enter 17-character VIN"
                               style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;"/>
                </VBox>

                <!-- Make and Model -->
                <HBox spacing="10">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Make *" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtMake"
                                   promptText="e.g., Volvo"
                                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;"/>
                    </VBox>
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Model *" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtModel"
                                   promptText="e.g., FH16"
                                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;"/>
                    </VBox>
                </HBox>

                <!-- Year and Capacity -->
                <HBox spacing="10">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Year *" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtYear"
                                   promptText="2024"
                                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;"/>
                    </VBox>
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Capacity (lbs) *" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtCapacity"
                                   promptText="26000"
                                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;"/>
                    </VBox>
                </HBox>

                <!-- License Plate and Mileage -->
                <HBox spacing="10">
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="License Plate" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtPlate"
                                   promptText="ABC-1234"
                                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;"/>
                    </VBox>
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Current Mileage" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtMileage"
                                   promptText="50000"
                                   style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-padding: 8;"/>
                    </VBox>
                </HBox>

                <!-- Status Checkboxes -->
                <VBox spacing="8">
                    <CheckBox fx:id="chkAvailable"
                              text="Truck is currently available"
                              selected="true"
                              style="-fx-font-size: 13px;"/>
                    <CheckBox fx:id="chkMaintenance"
                              text="Truck needs maintenance"
                              style="-fx-font-size: 13px;"/>
                </VBox>
            </VBox>

            <!-- Notes Section -->
            <VBox spacing="10"
                  style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">
                <Label text="ðŸ“ Additional Notes"
                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #495057;"/>
                <Separator/>
                <TextArea fx:id="txtNotes"
                          promptText="Enter any additional notes about this truck..."
                          prefRowCount="3"
                          wrapText="true"
                          style="-fx-background-radius: 5; -fx-border-radius: 5;"/>
            </VBox>

        </VBox>
    </ScrollPane>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
        <Button text="Cancel"
                onAction="#handleCancel"
                prefWidth="100"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20; -fx-cursor: hand;"/>
        <Button text="Add Truck"
                onAction="#handleAdd"
                prefWidth="120"
                defaultButton="true"
                style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20; -fx-font-weight: bold; -fx-cursor: hand;"/>
    </HBox>

</VBox>

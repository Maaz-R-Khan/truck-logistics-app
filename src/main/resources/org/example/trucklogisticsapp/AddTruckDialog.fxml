<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.collections.FXCollections?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.trucklogisticsapp.controller.AddTruckDialogController"
      spacing="16"
      styleClass="dialog-root">

    <!-- Header -->
    <children>
        <VBox spacing="4">
            <children>
                <Label text="Add New Truck" styleClass="dialog-title"/>
                <Label text="Enter truck details to add it to the fleet"
                       styleClass="dialog-subtitle"/>
            </children>
        </VBox>

        <!-- Form Grid -->
        <GridPane hgap="16" vgap="12">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" minWidth="120"/>
                <ColumnConstraints hgrow="ALWAYS"/>
            </columnConstraints>

            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>

            <children>
                <!-- Row 0 -->
                <Label text="Truck ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"
                       styleClass="field-label"/>
                <TextField fx:id="truckIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"
                           promptText="Automatically assigned if left blank"/>

                <!-- Row 1 -->
                <Label text="License Plate:" GridPane.rowIndex="1" GridPane.columnIndex="0"
                       styleClass="field-label"/>
                <TextField fx:id="licensePlateField" GridPane.rowIndex="1" GridPane.columnIndex="1"
                           promptText="e.g. ABC-1234"/>

                <!-- Row 2 -->
                <Label text="Model:" GridPane.rowIndex="2" GridPane.columnIndex="0"
                       styleClass="field-label"/>
                <TextField fx:id="modelField" GridPane.rowIndex="2" GridPane.columnIndex="1"
                           promptText="e.g. Volvo FH16"/>

                <!-- Row 3 -->
                <Label text="Capacity (lbs):" GridPane.rowIndex="3" GridPane.columnIndex="0"
                       styleClass="field-label"/>
                <TextField fx:id="capacityField" GridPane.rowIndex="3" GridPane.columnIndex="1"
                           promptText="e.g. 40000"/>

                <!-- Row 4 -->
                <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="0"
                       styleClass="field-label"/>
                <ComboBox fx:id="statusCombo" GridPane.rowIndex="4" GridPane.columnIndex="1"
                          promptText="Select status">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Available"/>
                            <String fx:value="On Route"/>
                            <String fx:value="In Maintenance"/>
                            <String fx:value="Inactive"/>
                        </FXCollections>
                    </items>
                </ComboBox>

                <!-- Row 5 -->
                <Label text="Location:" GridPane.rowIndex="5" GridPane.columnIndex="0"
                       styleClass="field-label"/>
                <TextField fx:id="locationField" GridPane.rowIndex="5" GridPane.columnIndex="1"
                           promptText="City / Depot location"/>

                <!-- Row 6 -->
                <Label text="VIN:" GridPane.rowIndex="6" GridPane.columnIndex="0"
                       styleClass="field-label"/>
                <TextField fx:id="vinField" GridPane.rowIndex="6" GridPane.columnIndex="1"
                           promptText="Vehicle Identification Number"/>
            </children>
        </GridPane>

        <!-- Error Label -->
        <Label fx:id="errorLabel"
               styleClass="error-label"
               visible="false"
               managed="false"/>

        <!-- Buttons -->
        <HBox spacing="8" alignment="CENTER_RIGHT">
            <children>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Cancel"
                        onAction="#handleCancel"
                        styleClass="ghost-btn"/>
                <Button text="Save Truck"
                        onAction="#handleSaveTruck"
                        defaultButton="true"
                        styleClass="primary-btn"
                        style="-fx-padding: 6 16 6 16; -fx-font-weight: bold; -fx-cursor: hand;"/>
            </children>
        </HBox>

    </children>
</VBox>

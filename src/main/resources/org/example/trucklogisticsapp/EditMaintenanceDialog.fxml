<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      spacing="10"
      fx:controller="org.example.trucklogisticsapp.controller.EditMaintenanceController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Edit Maintenance Record"
           style="-fx-font-size: 18; -fx-font-weight: bold;" />

    <GridPane hgap="10" vgap="10">

        <Label text="Record ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtRecordId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Truck ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtTruckId" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Type:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtType" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Scheduled Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dpScheduled" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Cost ($):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCost" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Status:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="txtStatus" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    </GridPane>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#onCancel"/>
        <Button text="Update" onAction="#onSave"/>
    </HBox>

</VBox>
